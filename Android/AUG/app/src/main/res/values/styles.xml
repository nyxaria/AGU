<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>
    <!--use item name="drawerArrowStyle" if you are using dark primaryColor in your app, else remove it-->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="popupDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="TypeSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/drawerBackground</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/drawerBackground</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
    </style>

    <string name="home">Home</string>

</resources>
